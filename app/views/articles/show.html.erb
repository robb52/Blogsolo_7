<%= render 'shared/navbar' %>

<div class="container show">
  <div class="col-md-6 offset-3">
    
    <div style="width: 400px; height: auto">
      <%= image_tag(@article.image, style: 'width: 100%', class: "show-img")  %>
    </div>

    <div class="show-title" style="text-align: center">
     <%= @article.title %>
    </div>

    <%= @article.text %>

    <div class="comments">
      Comments
    </div>

    <%= render @article.comments %>

    <%= render 'comments/form' %>

    <div class="btn-group">
      <%= link_to 'Edit', edit_article_path(@article), class: "btn btn-secondary" %>
      <%= link_to 'Back', articles_path, class: "btn btn-info" %>
      <%= link_to 'Delete', article_path(@article), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
    </div>

  </div>
</div>


